# Flask Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///prothemesru.db
# For PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost/prothemesru

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=30

# File Upload Configuration
UPLOAD_FOLDER=uploads
MEDIA_FOLDER=media
SCRAPED_FOLDER=scraped_sites
MAX_CONTENT_LENGTH=16777216

# Payment Configuration (YooKassa)
YOOKASSA_SHOP_ID=your-shop-id
YOOKASSA_SECRET_KEY=your-secret-key

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# Email Configuration (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# External APIs
GOOGLE_FONTS_API_KEY=your-google-fonts-api-key
OPENAI_API_KEY=your-openai-api-key

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/prothemesru.log

# Development
DEBUG=True
TESTING=False

# Production
# DEBUG=False
# TESTING=False
# SESSION_COOKIE_SECURE=True 